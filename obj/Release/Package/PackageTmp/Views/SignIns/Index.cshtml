
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>SignIn List</h2>
@using (Html.BeginForm("New", "SignIns"))
{
    <div>
        <button type="submit" class="btn btn-primary">
            New SignIn
        </button>
    </div>
}
<table id="newsignins" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Person</th>
            <th>Course</th>
            <th>Time</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $("#newsignins").DataTable({
                ajax: {
                    url: "/api/newsignins",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "person.name"
                    },
                    {
                        data: "course.name"
                    },
                    {
                        data: "dateSignIn"
                    },
                    {
                        data: "id",
                        render: function (data) {
                            return "<button class='btn-link js-delete' data-newSignIn-id=" + data + "> Delete</button>";
                        }
                    }
                    ]
                    })                    
        });
        
        $("#newsignins").on("click", ".js-delete", function () {
            var button = $(this);
            if (confirm("Are you sure you want to delete?")) {
                $.ajax(
                    {
                        url: "/api/newsignins/" + button.attr("data-newSignIn-id"),
                        method: "DELETE",
                        success: function () {
                            table.row(button.parents("tr")).remove().draw();
                        }
                    });
            }
        });
        


    </script>
}
