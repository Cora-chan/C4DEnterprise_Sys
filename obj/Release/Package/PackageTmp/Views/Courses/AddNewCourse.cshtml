@model C4DEnterpriseSys_ver1.ViewModels.CourseFormViewModel
@{
    ViewBag.Title = "AddNewCourse";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>NewCourse</h2>
@using (Html.BeginForm("Save", "Courses"))
{
    @Html.ValidationSummary(true, "please fix the errors.")
<div class="form-group">
    @Html.LabelFor(c => c.Course.Name)
    @Html.TextBoxFor(c => c.Course.Name, new { @class = "form-control" })
    @Html.ValidationMessageFor(c => c.Course.Name)
</div>
<div class="form-group">
    @Html.LabelFor(c => c.Course.Year)
    @Html.TextBoxFor(c => c.Course.Year, new { @class = "form-control" })
    @Html.ValidationMessageFor(c => c.Course.Year)
</div>
<div class="form-group">
    @Html.LabelFor(c => c.Course.SemesterId)
    @Html.DropDownListFor(c => c.Course.SemesterId, new SelectList(Model.Semesters, "Id", "Name"), " ", new { @class = "form-control" })
    @Html.ValidationMessageFor(c => c.Course.SemesterId)
</div>
<div class="form-group">
    @Html.LabelFor(c => c.Course.DayInWeekId)
    @Html.DropDownListFor(c => c.Course.DayInWeekId, new SelectList(Model.DayInWeeks, "Id", "Name"), " ", new { @class = "form-control" })
    @Html.ValidationMessageFor(c => c.Course.DayInWeekId)
</div>
<div class="form-group">
    @Html.LabelFor(c => c.Course.ClassDuration)
    @Html.TextBoxFor(c => c.Course.ClassDuration, new { @class = "form-control" })
    @Html.ValidationMessageFor(c => c.Course.ClassDuration)
</div>
<div class="form-group">
    @Html.LabelFor(c => c.Course.Times)
    @Html.TextBoxFor(c => c.Course.Times, new { @class = "form-control" })
    @Html.ValidationMessageFor(c => c.Course.Times)
</div>
<div class="form-group">
    @Html.LabelFor(c => c.Course.Hour)
    @Html.TextBoxFor(c => c.Course.Hour, new { @class = "form-control" })
    @Html.ValidationMessageFor(c => c.Course.Hour)
</div>
<div class="form-group">
    @Html.LabelFor(c => c.Course.BeginTime)
    @Html.TextBoxFor(c => c.Course.BeginTime, new { @class = "form-control" })
    @Html.ValidationMessageFor(c => c.Course.BeginTime)
</div>
<div class="form-group">
    @Html.LabelFor(c => c.Course.EndTime)
    @Html.TextBoxFor(c => c.Course.EndTime, new { @class = "form-control" })
    @Html.ValidationMessageFor(c => c.Course.EndTime)
</div>
<div class="form-group">
    @Html.LabelFor(c => c.Course.BeginDate)
    @Html.TextBoxFor(c => c.Course.BeginDate, "{0:d MMM yyyy}", new { @class = "form-control" })
    @Html.ValidationMessageFor(c => c.Course.BeginDate)
</div>
<div class="form-group">
    @Html.LabelFor(c => c.Course.EndDate)
    @Html.TextBoxFor(c => c.Course.EndDate, "{0:d MMM yyyy}", new { @class = "form-control" })
    @Html.ValidationMessageFor(c => c.Course.EndDate)
</div>
<div class="form-group">
    @Html.LabelFor(c => c.Course.CTypeId)
    @Html.DropDownListFor(c => c.Course.CTypeId, new SelectList(Model.CTypes, "Id", "Name"), " ", new { @class = "form-control" })
    @Html.ValidationMessageFor(c => c.Course.CTypeId)
</div>
<div class="form-group">
    @Html.LabelFor(c => c.Course.GenreId)
    @Html.DropDownListFor(c => c.Course.GenreId, new SelectList(Model.Genres, "Id", "Name"), " ", new { @class = "form-control" })
    @Html.ValidationMessageFor(c => c.Course.GenreId)
</div>
<div class="form-group">
    @Html.LabelFor(c => c.Course.RoomId)
    @Html.DropDownListFor(c => c.Course.RoomId, new SelectList(Model.Rooms, "Id", "Name"), " ", new { @class = "form-control" })
    @Html.ValidationMessageFor(c => c.Course.RoomId)
</div>
<div class="form-group">
    @Html.LabelFor(c => c.Course.LevelId)
    @Html.DropDownListFor(c => c.Course.LevelId, new SelectList(Model.Levels, "Id", "Name"), " ", new { @class = "form-control" })
    @Html.ValidationMessageFor(c => c.Course.LevelId)
</div>
    @Html.HiddenFor(c => c.Course.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">
        Save
    </button>
}
@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}

